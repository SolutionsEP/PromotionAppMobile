<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.EPDev.PromotionAppIcc.PromotionDetailActivity"
    tools:showIn="@layout/activity_promotion_detail">

    <com.EPDev.PromotionAppIcc.VerticalScrollview
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/promotion_detail_img"
                android:scaleType="centerCrop"
                android:src="@drawable/sportshop"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:background="@drawable/background_with_shadow"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Titulo Promocion"
                    android:textSize="17dp"
                    android:id="@+id/promotion_detail_title"
                    android:fontFamily="casual"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@color/colorAccent"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acerca de la promocion"
                        android:paddingBottom="5dp"
                        android:id="@+id/promotion_detail_about"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Categoria: "
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:paddingTop="5dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Restaurante"
                            android:id="@+id/category_store"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Precio: "
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                           />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Restaurante"
                            android:id="@+id/promotion_detail_price"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valido hasta el..."
                        android:paddingBottom="5dp"
                        android:id="@+id/promotion_valid_date"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.EPDev.PromotionAppIcc.VerticalScrollview>

</LinearLayout>
